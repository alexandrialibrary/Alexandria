<?xml version="1.0" encoding="UTF-8"?>
<groups
    xmlns="http://www.isdc.ro/wro"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.isdc.ro/wro wro.xsd"
    >
    <group name="alexandria-app">
        <js>/assets/coffee/alexandria-app/*.coffee</js>
        <js>/assets/js/alexandria-app/*.js</js>
    </group>

    <group name="alexandria-admin">
        <js>/assets/coffee/alexandria-admin/*.coffee</js>
        <js>/assets/js/alexandria-admin/*.js</js>
    </group>

    <group name="scripts">
        <js>/assets/js/*.js</js>
        <js>/assets/coffee/*.coffee</js>
    </group>

    <group name="styles">
        <css>/assets/styles/*.sass</css>
        <css>/assets/styles/*.css</css>
    </group>

</groups>
